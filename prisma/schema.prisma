generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String   @id @default(cuid())
  name            String
  ghlAccessToken  String?
  ghlLocationId   String?
  waPhoneNumberId String?
  waAccessToken   String?
  leads           Lead[]
  users           User[]
  sequences       Sequence[]
  templates       Template[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model User {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id])
  name            String
  email           String       @unique
  passwordHash    String
  role            String       @default("ADMIN") // "ADMIN", "VIEWER"
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([organizationId])
}

model Lead {
  id               String       @id @default(cuid())
  organizationId   String
  organization     Organization @relation(fields: [organizationId], references: [id])
  ghlContactId     String?
  firstName        String?
  lastName         String?
  email            String?
  phone            String?
  status           String       @default("NEW")
  tags             String[]     @default([])
  context          Json?
  messages         Message[]
  lastContactedAt  DateTime?
  nextFollowupAt   DateTime?
  sequenceStep     Int          @default(0)
  sequenceId       String?
  sequence         Sequence?    @relation(fields: [sequenceId], references: [id])
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@unique([organizationId, phone])
  @@index([organizationId])
  @@index([phone])
  @@index([nextFollowupAt])
}

model Message {
  id              String   @id @default(cuid())
  leadId          String
  lead            Lead     @relation(fields: [leadId], references: [id])
  content         String
  direction       String   // "INBOUND" or "OUTBOUND"
  type            String   @default("TEXT") // "TEXT", "TEMPLATE"
  aiGenerated     Boolean  @default(false)
  waMessageId     String?
  status          String?  // "DRAFT", "SENT", "DELIVERED", "READ", "FAILED"
  createdAt       DateTime @default(now())

  @@index([leadId])
}

model Template {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id])
  name            String
  content         String
  category        String?
  language        String       @default("es")
  status          String       @default("ACTIVE")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([organizationId])
}

model Sequence {
  id              String         @id @default(cuid())
  organizationId  String
  organization    Organization   @relation(fields: [organizationId], references: [id])
  name            String
  description     String?
  isActive        Boolean        @default(true)
  steps           SequenceStep[]
  leads           Lead[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([organizationId])
}

model SequenceStep {
  id              String   @id @default(cuid())
  sequenceId      String
  sequence        Sequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  stepNumber      Int
  delayDays       Int      // Days to wait since previous step
  messageTemplate String   // Text template or AI prompt
  useAI           Boolean  @default(true)
  createdAt       DateTime @default(now())

  @@unique([sequenceId, stepNumber])
  @@index([sequenceId])
}
